                <%= link_to "https://github.com/alexglach" do %>
                  <%= image_tag "GitHub-Mark-120px-plus.png", class:"img-responsive" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="row">
