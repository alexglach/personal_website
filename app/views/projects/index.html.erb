                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="row">
              <div class="col-xs-12">
                <%= link_to "https://twitter.com/alexglach" do %>
                  <%= image_tag "tw.png", class:"img-responsive" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="row">
              <div class="col-xs-12">
                <%= link_to "https://www.linkedin.com/in/alex-lach-28921236" do %>
                  <%= image_tag "linkedin-icon-white.png", class:"img-responsive" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-xs-2">
            <div class="row">
              <div class="col-xs-12">
                <%= link_to "mailto:alexglach@gmail.com" do %>
                  <%= image_tag "email.png", class:"img-responsive" %>
